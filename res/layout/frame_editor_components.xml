<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:util="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:weightSum="4"
    tools:ignore="MissingRegistered" >

    <LinearLayout
        style="@style/default_vertical_linear_layout"
        android:layout_height="0dp"
        android:layout_weight="2.5" >

        <LinearLayout
            style="@style/default_horizontal_linear_layout"
            android:layout_weight="1" >

            <ac.robinson.view.CenteredImageTextButton
                android:id="@+id/button_record_audio_1"
                style="@style/default_coloured_button"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:drawableTop="@drawable/ic_menu_audio"
                util:filterColorDefault="@color/button_blue_default"
                util:filterColorTouched="@color/button_blue_touched" />

            <SeekBar
                android:id="@+id/seekBar1"
                style="@style/narrative_seekbar"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            style="@style/default_horizontal_linear_layout"
            android:layout_weight="1" >

            <ac.robinson.view.CenteredImageTextButton
                android:id="@+id/button_record_audio_2"
                style="@style/default_coloured_button"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:drawableTop="@drawable/ic_menu_audio"
                android:visibility="gone"
                util:filterColorDefault="@color/button_blue_default"
                util:filterColorTouched="@color/button_blue_touched" />

            <SeekBar
                android:id="@+id/seekBar2"
                style="@style/narrative_seekbar"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            style="@style/default_horizontal_linear_layout"
            android:layout_weight="1" >

            <ac.robinson.view.CenteredImageTextButton
                android:id="@+id/button_record_audio_3"
                style="@style/default_coloured_button"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:drawableTop="@drawable/ic_menu_audio"
                android:visibility="gone"
                util:filterColorDefault="@color/button_blue_default"
                util:filterColorTouched="@color/button_blue_touched" />

            <SeekBar
                android:id="@+id/seekBar3"
                style="@style/narrative_seekbar"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>

    <ac.robinson.view.CenteredImageTextButton
        android:id="@+id/button_add_text"
        style="@style/default_coloured_button"
        android:layout_height="0dp"
        android:layout_weight="1.25"
        android:drawableTop="@android:drawable/ic_menu_edit"
        util:filterColorDefault="@color/button_yellow_default"
        util:filterColorTouched="@color/button_yellow_touched" />

    <LinearLayout
        style="@style/default_horizontal_linear_layout"
        android:layout_height="@dimen/navigation_button_height"
        android:layout_weight="0.25" >

        <ac.robinson.view.CenteredImageTextButton
            android:id="@+id/button_finished_editing"
            style="@style/default_coloured_button"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:drawableTop="@android:drawable/ic_menu_revert"
            android:visibility="gone" />

        <ac.robinson.view.CenteredImageTextButton
            android:id="@+id/button_delete_frame"
            style="@style/default_coloured_button"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:drawableTop="@android:drawable/ic_menu_delete"
            util:filterColorDefault="@color/button_red_default"
            util:filterColorTouched="@color/button_red_touched" />
    </LinearLayout>

</merge>
